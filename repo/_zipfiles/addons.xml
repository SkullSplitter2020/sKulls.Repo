<addons>
<addon id="plugin.program.sKullswizard" name="[COLOR indianred]sKulls [/COLOR]Wizard" version="1.1" provider-name="sKulls inc.">
    <requires>
        <import addon="xbmc.python" version="3.0.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
        <import addon="script.kodi.android.update" optional="true" version="1.1.7" />
        <import addon="script.speedtester" optional="true" version="1.1.2" />
    </requires>

    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.service" library="startup.py" start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">[COLOR indianred]sKulls [/COLOR]Wizard</summary>
        <description lang="en">Der [COLOR indianred]sKulls [/COLOR]Wizard bietet viele Wartungsfunktionen, selektive Add-on-Datenspeicherung und automatisierte Build-Installationen.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source></source>
        <news>
        Nach langer und kommt wieder mal ein klasse deutsches Kodi-Build, was so gut wie alles kann :)
        </news>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

    <addon id="repository.skullsinc" name="sKulls inc. Repo" version="1.0" provider-name="sKulls inc. Team">
        <extension point="xbmc.addon.repository" name="sKulls inc. Repo">
		           <dir>
			            <info compressed="false">https://raw.githubusercontent.com/SkullSplitter2020/sKulls.Repo/main/repo/_zipfiles/addons.xml</info>
	        		    <checksum>https://raw.githubusercontent.com/SkullSplitter2020/sKulls.Repo/main/repo/_zipfiles/addons.xml.md5</checksum>
           				<datadir zip="true">https://raw.githubusercontent.com/SkullSplitter2020/sKulls.Repo/main/repo/_zipfiles/</datadir>
            <hashes>false</hashes>
		            </dir>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">sKulls Repository</summary>
            <description lang="en_GB">Repo from the sKulls inc. Team for you.</description>
            <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>

